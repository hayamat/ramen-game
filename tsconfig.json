{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "types": ["phaser"],
    "typeRoots": ["./node_modules/@types", "./node_modules/phaser/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
